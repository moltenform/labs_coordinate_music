{
    
    "version": "2.0.0",
    "tasks": [
        {
            "label": "python pylint",
            "type": "shell",
            "command": "py -m shinerainsevenlib --lint-wrapper --pylint",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "python ruff lint",
            "type": "shell",
            "command": "py -m shinerainsevenlib --lint-wrapper --rufflint",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "python ruff lint autofix",
            "type": "shell",
            "command": "py -m shinerainsevenlib --lint-wrapper --rufflint --fix",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "python run autoformat",
            "type": "shell",
            "command": "py -m shinerainsevenlib --lint-wrapper --format",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
    ]
}


