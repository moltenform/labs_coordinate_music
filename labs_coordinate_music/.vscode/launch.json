{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["--capture=no", "--maxfail=1", "-v", "tests/"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run ui tests",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/ui_tests.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
    ]
}
